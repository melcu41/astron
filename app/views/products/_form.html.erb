  </div>
  <div class="field">
    <%= f.label :category_id %><br />
    <%= @categories = Category.find(:all, :order => "name") 
    collection_select(:product, :category_id, @categories, :id, :name, options ={:prompt => "Select a category"}, :class =>"category") %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
